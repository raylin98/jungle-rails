<tr>
  <td>
    <%= image_tag product.image.thumb.url%>
  </td>
  <td>
    <h4 ><%= product.name%> </h4>
    <br>
    <p> <%= product.description%> </p>
  </td>
  <td>
  <%= humanized_money_with_symbol product.price%>
  </td>
  <td>
    <div>
      <p> <%= quantity%> </p>
    </div>
  </td>
  <td>
    <p> <%= humanized_money_with_symbol product.price * quantity%> </p>
  </td>
</tr>